<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ispringle.dumbcast"
    android:versionCode="1"
    android:versionName="0.1.0" >

    <uses-sdk
        android:minSdkVersion="27"
        android:targetSdkVersion="27" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:extractNativeLibs="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.ispringle.dumbcast.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name="com.ispringle.dumbcast.services.PlaybackService"
            android:enabled="true"
            android:exported="false" />
        <service
            android:name="com.ispringle.dumbcast.services.DownloadService"
            android:enabled="true"
            android:exported="false" />

        <receiver
            android:name="com.ispringle.dumbcast.services.DownloadService$DownloadCompleteReceiver"
            android:exported="false" >
            <intent-filter>
                <action android:name="android.app.DownloadManager.ACTION_DOWNLOAD_COMPLETE" />
            </intent-filter>
        </receiver>
    </application>

</manifest>